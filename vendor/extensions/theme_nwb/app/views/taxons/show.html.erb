<% content_for :breadcrumbs do %>
  <%= render "shared/pwb_banner" %>
  <%= breadcrumbs(@taxon) %>
<% end 

unless @current_domain == @site.code || @taxon.cross_sell.blank?%>
  <div class="content description cross_sell">
    <%= @taxon.cross_sell %>
  </div><%
else  %>
  <div class="content description">
    <%= @taxon.description %>
  </div><%
end %>
<div class="products">
  <h1><%= taxon_header(@taxon) %></h1>
  <%= render :partial => "shared/products", :locals => {:products => @products, :taxon => @taxon } %>
</div>
<% unless @taxon.footer.blank? %>
  <div class="content footer">
    <%= @taxon.footer %>
  </div>
<% end %>